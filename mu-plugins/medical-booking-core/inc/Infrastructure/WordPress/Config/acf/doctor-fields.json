{
    "key": "group_doctor_fields",
    "title": "Doctor Fields",
    "location": [
        [
            {
                "param": "post_type",
                "operator": "==",
                "value": "doctor"
            }
        ]
    ],
    "fields": [
        {
            "key": "field_doctor_phone",
            "label": "Số điện thoại",
            "name": "doctor_phone",
            "type": "text",
            "maxlength": 20,
            "wrapper": {
                "width": "50"
            }
        },
        {
            "key": "field_doctor_email",
            "label": "Email",
            "name": "doctor_email",
            "type": "email",
            "wrapper": {
                "width": "50"
            }
        },
        {
            "key": "field_doctor_years_of_experience",
            "label": "Kinh nghiệm",
            "name": "doctor_years_of_experience",
            "type": "number",
            "suffix": "năm",
            "wrapper": {
                "width": "33"
            }
        },
        {
            "key": "field_doctor_schedule",
            "label": "Lịch khám",
            "name": "doctor_schedule",
            "type": "select",
            "ui": 1,
            "choices": {
                "morning": "Sáng",
                "afternoon": "Chiều",
                "evening": "Tối"
            },
            "wrapper": {
                "width": "33"
            }
        },
        {
            "key": "field_doctor_bio",
            "label": "Tiểu sử",
            "name": "doctor_bio",
            "type": "textarea",
            "rows": 5
        }
    ]
}

